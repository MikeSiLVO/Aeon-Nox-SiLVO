		<!-- Floor labels / media flags -->
		<control type="group">
			<!-- <visible>Control.IsVisible(57) | Control.IsVisible(500)</visible> -->
			<visible>!Window.IsActive(addoninformation)</visible>
			<animation effect="slide" tween="cubic" time="720" start="0,806" end="0,0">VisibleChange</animation>
			<animation effect="slide" tween="cubic" time="720" start="0,806" end="0,0">WindowOpen</animation>
			<animation effect="slide" tween="cubic" time="720" end="0,806" start="0,0">WindowClose</animation>
			<top>-30</top>
			<!-- Footer (Icons, Shift) Not Game Mode-->
			<control type="group">
				<visible>[Control.IsVisible(500) | Control.IsVisible(57)] + !$EXP[InGameMode]</visible>
				<animation effect="slide" start="0" end="40" time="720" tween="cubic" easing="inout" condition="Control.IsVisible(57)">Conditional</animation>
				<animation effect="slide" tween="cubic" time="720" start="0,806" end="0,0">VisibleChange</animation>
				<control type="group">
					<left>90</left>
					<top>1010</top>
					<control type="label">
						<right>680</right>
						<height>48</height>
						<font>font16_title_bold</font>
						<scroll>true</scroll>
						<label>$INFO[ListItem.Label]</label>
						<textoffsetx>30</textoffsetx>
					</control>
					<control type="label">
						<top>45</top>
						<right>330</right>
						<height>30</height>
						<font>font13_title</font>
						<scroll>true</scroll>
						<label>$INFO[ListItem.AddonSummary]</label>
