			<include condition="!Skin.HasSetting(Disable.InfoWallView)">AddonInfoWall</include>
			<!-- view id = 51 -->
			<include condition="!Skin.HasSetting(Disable.TriPanelView)">GamesTriPanel</include>
			<!-- view id = 55 -->
			<include condition="!Skin.HasSetting(Disable.ShiftView)">GamesShift</include>
			<!-- view id = 57 -->
			<include condition="!Skin.HasSetting(Disable.LogoView)">View_59_Logo</include>
			<!-- view id = 59 -->
			<include condition="!Skin.HasSetting(Disable.IconsView)">AddonIcons</include>
			<!-- view id = 500 -->
			<include condition="!Skin.HasSetting(Disable.MyFlixView)">View_509_MyFlix</include>
