<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">11</defaultcontrol>
	<coordinates>
		<system>1</system>
		<left>350</left>
		<top>20</top>
	</coordinates>
	<animation effect="fade" start="0" end="100" time="300" easing="out">WindowOpen</animation>
	<animation effect="fade" start="100" end="0" time="300" easing="in">WindowClose</animation>
	<controls>
		<!-- new channel Logo on the left -->
		<control type="group">
			<control type="image"> <!-- BG -->
				<left>-320</left>
				<top>20</top>
				<width>330</width>
				<height>310</height>
				<texture border="40">listpanel_back.png</texture>
			</control>
            <control type="image"> <!-- Box above BG -->
				<left>-310</left>
				<top>30</top>
				<width>310</width>
				<height>290</height>
				<texture>new_pvr/texturebg3.png</texture>
				<align>center</align>
				<visible>false</visible>
			</control>
			<control type="image" id="1"> <!-- Channel Logo -->
				<left>-280</left>
				<top>60</top>
				<width>240</width>
				<height>140</height>
				<align>center</align>
				<texture>$INFO[VideoPlayer.Cover]</texture>
				<aspectratio>keep</aspectratio>
			</control>
			<control type="label"> <!-- Channel Name -->
				<left>-300</left>
				<top>220</top>
				<width>280</width>
				<height>20</height>
				<align>center</align>
				<font>font15</font>
				<textcolor>white</textcolor>
				<scroll>true</scroll>
				<label>[B]$INFO[VideoPlayer.ChannelName][/B]</label>
			</control>
            <control type="label"> <!-- StartDate -->
                <left>-300</left>
                <top>270</top>
                <width>280</width>
                <height>20</height>
                <align>center</align>
                <font>font11</font>
                <textcolor>white</textcolor>
                <scroll>true</scroll>
                <label>$INFO[Container(11).ListItemPosition(0).StartDate]</label>
            </control>
		</control>
		<control type="group">
			<control type="image">
				<top>20</top>
				<width>1200</width>
				<height>1025</height>
				<texture border="40">listpanel_back.png</texture>
			</control>
			<control type="wraplist" id="11">
				<left>31</left>
				<top>53</top>
				<width>1137</width>
				<height>970</height>
				<onleft>60</onleft>
				<onright>60</onright>
				<onup>11</onup>
				<ondown>11</ondown>
				<focusposition>2</focusposition>
				<viewtype label="535">list</viewtype>
				<pagecontrol>60</pagecontrol>
				<scrolltime tween="quadratic" easing="out">200</scrolltime>
				<itemlayout height="70">
					<control type="image">
						<top>10</top>
						<width>1137</width>
						<height>60</height>
						<texture border="1">separator2.png</texture>
					</control>
					<control type="label">
						<left>10</left>
						<width>130</width>
						<height>60</height>
						<align>left</align>
						<font>font15</font>
						<textcolor>white</textcolor>
						<selectedcolor>$VAR[ThemeLabelColor]</selectedcolor>
                        <label>$INFO[ListItem.StartTime]</label>
					</control>
					<control type="label">
						<left>130</left>
						<width>980</width>
						<height>60</height>
						<font>font15</font>
						<textoffsetx>15</textoffsetx>
						<textcolor>grey2</textcolor>
						<selectedcolor>$VAR[ThemeLabelColor]</selectedcolor>
						<label>$INFO[ListItem.Label]</label>
						<animation effect="slide" start="0,0" end="40,0" time="0" tween="sine" easing="in" condition="[ListItem.HasTimer | ListItem.IsRecording]">Conditional</animation>
					</control>
					<control type="group">
						<visible>[ListItem.HasTimer | ListItem.IsRecording]</visible>
						<left>130</left>
						<control type="label">
							<top>20</top>
							<width>30</width>
							<height>30</height>
							<font>IconSmall</font>
							<textoffsetx>15</textoffsetx>
							<textcolor>$VAR[ThemeLabelColor]</textcolor>
							<align>right</align>
							<selectedcolor>$VAR[ThemeLabelColor]</selectedcolor>
							<label></label>
							<visible>ListItem.HasTimer + !ListItem.IsRecording</visible>
						</control>
						<control type="label">
							<top>20</top>
							<width>30</width>
							<height>30</height>
							<font>IconSmall</font>
							<textoffsetx>15</textoffsetx>
							<textcolor>red</textcolor>
							<align>right</align>
							<selectedcolor>$VAR[ThemeLabelColor]</selectedcolor>
							<label></label>
							<visible>ListItem.IsRecording</visible>
						</control>
					</control>
				</itemlayout>
				<focusedlayout height="120">
					<control type="image">
						<top>60</top>
						<width>1123</width>
						<height>60</height>
						<texture border="1">separator2.png</texture>
					</control>
					<control type="image">
						<width>1123</width>
						<height>120</height>
						<texture colordiffuse="$VAR[HighlightBarColor]" border="4">listselect_fo.png</texture>
						<visible>Control.HasFocus(11)</visible>
						<include>VisibleFadeAnimation</include>
					</control>
					<control type="label">
						<left>10</left>
						<width>130</width>
						<height>60</height>
						<align>left</align>
						<font>font15</font>
						<textcolor>white</textcolor>
						<selectedcolor>$VAR[ThemeLabelColor]</selectedcolor>
						<label>$INFO[ListItem.StartTime]</label>
					</control>
					<control type="label">
						<left>130</left>
						<width>984</width>
						<height>60</height>
						<font>font15</font>
						<textoffsetx>15</textoffsetx>
						<textcolor>white</textcolor>
						<selectedcolor>$VAR[ThemeLabelColor]</selectedcolor>
						<label>$INFO[ListItem.Label]</label>
						<animation effect="slide" start="0,0" end="40,0" time="0" tween="sine" easing="in" condition="[ListItem.HasTimer | ListItem.IsRecording]">Conditional</animation>
					</control>
					<control type="label">
						<top>50</top>
						<left>130</left>
						<width>984</width>
						<height>60</height>
						<font>font14</font>
						<textoffsetx>15</textoffsetx>
						<textcolor>grey2</textcolor>
						<label>$INFO[ListItem.Plot]</label>
					</control>
					<control type="group">
						<visible>[ListItem.HasTimer | ListItem.IsRecording]</visible>
						<left>130</left>
						<control type="label">
							<top>18</top>
							<width>100</width>
							<height>30</height>
							<font>IconSmall</font>
							<textoffsetx>15</textoffsetx>
							<textcolor>$VAR[ThemeLabelColor]</textcolor>
							<align>left</align>
							<selectedcolor>$VAR[ThemeLabelColor]</selectedcolor>
							<label></label>
							<visible>ListItem.HasTimer + !ListItem.IsRecording</visible>
						</control>
						<control type="label">
							<top>18</top>
							<width>100</width>
							<height>30</height>
							<font>IconSmall</font>
							<textoffsetx>15</textoffsetx>
							<textcolor>red</textcolor>
							<align>left</align>
							<selectedcolor>$VAR[ThemeLabelColor]</selectedcolor>
							<label></label>
							<visible>ListItem.IsRecording</visible>
						</control>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="60">
				<left>1156</left>
				<top>53</top>
				<width>14</width>
				<height>990</height>
				<showonepage>false</showonepage>
				<texturesliderbackground>-</texturesliderbackground>
				<texturesliderbar colordiffuse="55ffffff" border="1">scrollbar/texturesliderbar2.png</texturesliderbar>
				<texturesliderbarfocus border="1">scrollbar/texturesliderbar2.png</texturesliderbarfocus>
				<onleft>11</onleft>
				<onright>11</onright>
				<ondown>61</ondown>
				<onup>61</onup>
				<orientation>vertical</orientation>
			</control>
		</control>
	</controls>
</window>